# Frontend Environment Variables for Enterprise Video Conference Platform

# Development/Production Mode
NODE_ENV=development
VITE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:8081
VITE_API_BASE_URL=http://localhost:8081/api/v1
VITE_WS_URL=ws://localhost:8081/ws

# Application Configuration
VITE_APP_NAME=Video Conference Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Enterprise Video Conferencing Solution

# Feature Flags (match backend features)
VITE_FEATURE_CHAT=true
VITE_FEATURE_REACTIONS=true
VITE_FEATURE_SCREEN_SHARING=true
VITE_FEATURE_RECORDING=true
VITE_FEATURE_WAITING_ROOM=true
VITE_FEATURE_BREAKOUT_ROOMS=false
VITE_FEATURE_WHITEBOARD=false

# WebRTC Configuration
VITE_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
VITE_TURN_SERVER_URL=
VITE_TURN_USERNAME=
VITE_TURN_CREDENTIAL=

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_BRAND_PRIMARY_COLOR=#007bff
VITE_BRAND_LOGO_URL=
VITE_COMPANY_NAME=Your Company Name
VITE_SUPPORT_EMAIL=support@yourcompany.com

# File Upload Limits (should match backend)
VITE_UPLOAD_MAX_SIZE_MB=100
VITE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Meeting Configuration
VITE_DEFAULT_MEETING_DURATION_HOURS=2
VITE_MAX_PARTICIPANTS=100
VITE_ENABLE_GUEST_ACCESS=true

# Debug and Development
VITE_DEBUG=true
VITE_SHOW_DEBUG_PANEL=true
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true

# Analytics & Monitoring
VITE_ANALYTICS_ENABLED=false
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# External Integrations
VITE_GOOGLE_CALENDAR_CLIENT_ID=
VITE_GOOGLE_MAPS_API_KEY=

# Social Login (if implemented)
VITE_GOOGLE_CLIENT_ID=
VITE_MICROSOFT_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=

# Notification Configuration
VITE_PUSH_NOTIFICATIONS_ENABLED=true
VITE_VAPID_PUBLIC_KEY=

# Security
VITE_RECAPTCHA_SITE_KEY=
VITE_CSP_REPORT_URI=

# Multi-tenancy Support
VITE_MULTI_TENANT_MODE=true
VITE_DEFAULT_CLIENT_THEME=default

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# Build Configuration
VITE_BUILD_TIMESTAMP=
VITE_GIT_COMMIT_HASH=